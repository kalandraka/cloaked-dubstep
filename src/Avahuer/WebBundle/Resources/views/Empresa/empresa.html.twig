{% block javascripts %}
    <script type="text/javascript">
        $(function(){
            $('.hovereffect').on('mouseenter', function(){
                $(this).find('span.empresa-icon').addClass('active');
                $(this).find('p').addClass('active');
            })
            .on('mouseleave', function(){
                $(this).find('span.empresa-icon').removeClass('active');
                $(this).find('p').removeClass('active');
            });
            $('span.movement-icon.icon-down').on('click', function(){
                $('#wrapper').animate({top: $('#wrapper').position().top - 100}, "fast");
            });
            $('span.movement-icon.icon-up').on('click', function(){
                var top = $('#wrapper').position().top;
                if(top < 0)
                    $('#wrapper').animate({top: $('#wrapper').position().top + 100}, "fast");
                else if(top > 0)
                    $('#wrapper').animate({top: 0}, "fast");
            });
        });
    </script>
{% endblock javascripts %}